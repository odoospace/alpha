<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_picking_form_autoinvoice" model="ir.ui.view">
            <field name="name">Auto Invoice Onshipping</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form" />
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_confirm']" position="after">
                      <button name="generate_invoice" string="Print invoice" type="object" class="oe_highlight"/>
                 </xpath>
            </field>
        </record>

        <record id="view_order_form_mspayment" model="ir.ui.view">
            <field name="name">sale.order.form.mspayment</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form" />
            <field name="arch" type="xml">
                <xpath expr="//button[@name='277']" position="after">
                      <button name="open_payment_create" string="Register Payment" type="object" class="btn-primary" attrs="{'invisible': [('state', 'in', ('draft','send', 'cancel'))]}"/>
                 </xpath>
            </field>
        </record>


    </data>
</openerp>